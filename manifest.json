{
	"manifest_version": 2,

	"name": "StayHydrated",
	"description": "A simple extension that reminds you to take a sip of water at a regular interval with a notification.",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "StayHydrated",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["tickingState.js", "popup.js", "pausedState.js", "moment.js", "background.js"],
		"persistent": true
	},
	"permissions": [
		"notifications"
	]
}